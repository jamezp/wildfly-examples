<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<BorderPane prefHeight="470.0" prefWidth="814.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.wildfly.example.server.ManagerController">
    <stylesheets>
        <URL value="@/overrides.css"/>
    </stylesheets>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <top>
        <GridPane hgap="10.0" vgap="10.0">
            <Label text="WildFly Path" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <TextField fx:id="wildflyHomeText" promptText="WildFly Home" GridPane.columnIndex="2"
                       GridPane.rowIndex="1"/>
            <Button fx:id="browseButton" onAction="#browse" text="Browse..." GridPane.columnIndex="3"
                    GridPane.rowIndex="1"/>
            <GridPane hgap="10.0" GridPane.columnIndex="2" GridPane.rowIndex="2">
                <Button fx:id="startStandaloneButton" disable="true" mnemonicParsing="false"
                        onAction="#startStandalone" text="Start Standalone" GridPane.columnIndex="1"/>
                <Button fx:id="startDomainButton" disable="true" mnemonicParsing="false" onAction="#startDomain"
                        text="Start Domain" GridPane.columnIndex="2"/>
                <Button fx:id="stopButton" disable="true" onAction="#stop" text="Stop"
                        GridPane.columnIndex="3"/>
                <padding>
                    <Insets left="-10.0"/>
                </padding>
            </GridPane>
            <TitledPane expanded="false" text="Startup Configuration" GridPane.columnIndex="2" GridPane.rowIndex="3"
                        GridPane.valignment="TOP">
                <GridPane hgap="10.0">
                    <Label text="Timeout: " GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <TextField fx:id="serverTimeoutField" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <Label text="Bind Address" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <TextField fx:id="bindAddressField" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                </GridPane>
            </TitledPane>
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </BorderPane.margin>
        </GridPane>
    </top>
    <center>
        <TabPane BorderPane.alignment="CENTER">
            <Tab text="Server Console" closable="false">
                <TextArea fx:id="serverConsoleOutputTextArea" editable="false">
                    <font>
                        <Font name="Monospaced Regular" size="13.0"/>
                    </font>
                </TextArea>
            </Tab>
            <Tab text="Console" closable="false">
                <TextArea fx:id="consoleOutputTextArea" editable="false">
                    <font>
                        <Font name="Monospaced Regular" size="13.0"/>
                    </font>
                </TextArea>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
